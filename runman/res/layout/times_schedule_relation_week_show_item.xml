<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
               android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="<<"
                android:id="@+id/button_week_back"/>

        <TextView
                android:layout_width="120dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="2015-05-25~2015-05-31"
                android:id="@+id/textView_days"/>
        <Button
               android:layout_width="wrap_content"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text=">>"
                android:id="@+id/button_week_next"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00-14:00"
                android:id="@+id/textView_start_end_time"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周一"
                android:id="@+id/checkBox_week1" android:enabled="false"/>
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周二"
                android:id="@+id/checkBox_week2"/>
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周三"
                android:id="@+id/checkBox_week3"/>
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周四"
                android:id="@+id/checkBox_week4"/>
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周五"
                android:id="@+id/checkBox_week5" />
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周六"
                android:id="@+id/checkBox_week6"/>
        <CheckBox
               android:layout_width="wrap_content"
                android:layout_weight="1.0" android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="周七"
                android:id="@+id/checkBox_week7"/>

    </LinearLayout>
</LinearLayout>