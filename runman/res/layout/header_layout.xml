<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_view_height"
                android:background="@color/header_view_background">

    <ImageView android:layout_width="@dimen/header_view_height"
               android:layout_height="@dimen/header_view_height"
               android:id="@+id/headerMenu"
               android:layout_alignParentLeft="true"
               android:scaleType="center"
               android:background="@drawable/header_item_selector"
               android:src="@drawable/header_menu"
               android:visibility="gone"/>

    <ImageView android:layout_width="@dimen/header_view_height"
               android:layout_height="@dimen/header_view_height"
               android:id="@+id/headerBack"
               android:layout_toRightOf="@id/headerMenu"
               android:layout_alignParentLeft="true"
               android:scaleType="center"
               android:src="@drawable/header_back"
               android:background="@drawable/header_item_selector"/>

    <TextView android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/headerTitle"
              android:layout_toRightOf="@+id/headerBack"
              android:layout_toLeftOf="@+id/headerMore"
              android:gravity="center"
              android:textColor="@color/white"
              android:singleLine="true"
              android:textSize="@dimen/header_view_title_text_size"
              android:text="@string/app_name"/>

    <ImageView android:layout_width="@dimen/header_view_height"
               android:layout_height="@dimen/header_view_height"
               android:id="@+id/headerMore"
               android:layout_alignParentRight="true"
               android:scaleType="center"
               android:src="@drawable/header_more"
               android:background="@drawable/header_item_selector"
               android:visibility="invisible"/>
</LinearLayout>