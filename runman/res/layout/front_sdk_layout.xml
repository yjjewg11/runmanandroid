<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_height="wrap_content"
                android:id="@+id/sinaBtn"
                android:text="新浪微博登录"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/sinaQuitBtn"
                android:text="新浪微博退出"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_height="wrap_content"
                android:id="@+id/sinaStatusBtn"
                android:text="新浪微博状态"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/sinaInfoBtn"
                android:text="新浪微博用户信息"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp">
        <Button android:layout_height="wrap_content"
                android:id="@+id/tecentBtn"
                android:text="腾讯微博登录"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/tecentQuitBtn"
                android:text="腾讯微博退出"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_height="wrap_content"
                android:id="@+id/tecentStatusBtn"
                android:text="腾讯微博状态"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/tecentInfoBtn"
                android:text="腾讯微博用户信息"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp">
        <Button android:layout_height="wrap_content"
                android:id="@+id/qqzoneBtn"
                android:text="qqzone登录"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/qqzoneQuitBtn"
                android:text="qqzone退出"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_height="wrap_content"
                android:id="@+id/qqzoneStatusBtn"
                android:text="qqzone状态"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:layout_height="wrap_content"
                android:id="@+id/qqzoneInfoBtn"
                android:text="qqzone用户信息"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>